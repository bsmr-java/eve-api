<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%-5level %logger{136} - %msg%n</pattern>
        </layout>
    </appender>

    <logger name="org.jboss">
        <level value="error"/>
    </logger>

    <root>
        <level value="warn"/>
        <appender-ref ref="STDOUT" />
    </root>

</configuration>